{
  "name": "@allmaps/cli",
  "version": "1.0.0-beta.46",
  "author": {
    "name": "Bert Spaan",
    "email": "hello@bertspaan.nl",
    "url": "https://bertspaan.nl"
  },
  "description": "Allmaps CLI",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "allmaps": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/allmaps.git",
    "directory": "apps/cli"
  },
  "homepage": "https://allmaps.org",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc && chmod +x dist/index.js",
    "test": "NODE_ENV=test pnpm run build && mocha --slow 200ms",
    "preversion": "pnpm run lint && pnpm test",
    "types": "tsc --noEmit",
    "lint": "prettier --check src test && eslint src test --ext .js,.ts",
    "format": "prettier --write src test"
  },
  "keywords": [
    "allmaps",
    "cli",
    "iiif",
    "georeference",
    "map"
  ],
  "license": "MIT",
  "dependencies": {
    "@allmaps/annotation": "workspace:^",
    "@allmaps/attach": "workspace:^",
    "@allmaps/id": "workspace:^",
    "@allmaps/iiif-parser": "workspace:^",
    "@allmaps/project": "workspace:^",
    "@allmaps/stdlib": "workspace:^",
    "@allmaps/transform": "workspace:^",
    "@commander-js/extra-typings": "^13.0.0",
    "commander": "^13.0.0",
    "stream-json": "^1.9.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^18.14.2",
    "@types/stream-json": "^1.7.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "chai": "^4.3.6",
    "chai-roughly": "^1.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.8.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.0",
    "zod": "^3.22.4"
  }
}
