  },
  "license": "GPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev-ssl": "SSL=true NODE_TLS_REJECT_UNAUTHORIZED=0 vite dev --host",
    "build": "vite build",
    "lerna-build": "lerna run build --scope @allmaps/here --include-dependencies",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check src && eslint src --ext .ts,.svelte",
    "format": "prettier --write src",
    "types": "tsc --noEmit",
    "preversion": "pnpm run types && pnpm run lint && pnpm run build",
    "cert": "mkdir .cert && mkcert -key-file ./.cert/key.pem -cert-file ./.cert/cert.pem 'localhost'"
  },
  "dependencies": {
    "@allmaps/annotation": "workspace:^",
    "@allmaps/bearing": "workspace:^",
    "@allmaps/iiif-parser": "workspace:^",
    "@allmaps/project": "workspace:^",
    "@allmaps/transform": "workspace:^",
    "@allmaps/stdlib": "workspace:^",
    "@allmaps/tailwind": "workspace:^",
    "@allmaps/types": "workspace:^",
    "@allmaps/ui": "workspace:^",
    "@turf/distance": "^7.2.0",
    "bits-ui": "^1.3.0",
