{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,

    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "references": [
    { "path": "../../packages/id" },
    { "path": "../../packages/transform" },
    { "path": "../../packages/render" },
    { "path": "../../packages/annotation" },
    { "path": "../../packages/iiif-parser" },
    { "path": "../../packages/openlayers" }
  ]
}
