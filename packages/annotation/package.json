    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/annotation.git"
  },
  "homepage": "https://allmaps.org",
  "keywords": [
    "iiif",
    "georeference",
    "map"
  ],
  "scripts": {
    "preversion": "npm test",
