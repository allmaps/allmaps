    "ajv-formats": "^2.1.1",
    "chai": "^4.3.4",
    "chai-shallow-deep-equal": "^1.4.6",
    "documentation": "^13.2.5",
    "esbuild": "^0.14.16",
    "eslint": "7",
    "mocha": "^8.3.2"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
