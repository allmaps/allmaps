{
  "name": "@allmaps/components",
  "version": "1.0.0-beta.3",
  "contributors": [
    {
      "name": "Bert Spaan",
      "email": "hello@bertspaan.nl",
      "url": "https://bertspaan.nl"
    },
    {
      "name": "Manuel Claeys Bouuaert",
      "email": "manuel.claeys.b@gmail.com",
      "url": "https://manuelclaeysbouuaert.be"
    }
  ],
  "description": "Svelte components for Allmaps",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "url": "git+https://github.com/allmaps/allmaps.git",
    "directory": "packages/components"
  },
  "scripts": {
    "dev": "vite dev",
    "watch": "svelte-package --watch",
    "build": "vite build && pnpm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check src && eslint src --ext .ts,.svelte",
    "types": "tsc --noEmit"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./icons": {
      "types": "./dist/icons.d.ts",
      "svelte": "./dist/icons.js",
      "default": "./dist/icons.js"
    },
    "./state": {
      "types": "./dist/state.d.ts",
      "svelte": "./dist/state.js",
      "default": "./dist/state.js"
    },
    "./geocoder": "./dist/geocoder.js",
    "./projections": "./dist/projections.js",
    "./css/*": "./dist/css/*"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "@allmaps/iiif-parser": "workspace:^",
    "@allmaps/project": "workspace:^",
    "@allmaps/stdlib": "workspace:^",
    "@allmaps/tailwind": "workspace:^",
    "@allmaps/transform": "workspace:^",
    "@allmaps/types": "workspace:^",
    "bits-ui": "^2.11.4",
    "flatbush": "^4.4.0",
    "fuse.js": "^7.1.0",
    "lodash-es": "^4.17.21",
    "phosphor-svelte": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@lucide/svelte": "^0.515.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/lodash-es": "^4.17.6",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier": "^3.4.2",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "vite-plugin-devtools-json": "^1.0.0"
  }
}
