{
  "name": "@allmaps/components",
  "version": "1.0.0-beta.3",
  "contributors": [
    {
      "name": "Bert Spaan",
      "email": "hello@bertspaan.nl",
      "url": "https://bertspaan.nl"
    },
    {
      "name": "Manuel Claeys Bouuaert",
      "email": "manuel.claeys.b@gmail.com",
      "url": "https://manuelclaeysbouuaert.be"
    }
  ],
  "description": "Svelte components for Allmaps",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/allmaps.git",
    "directory": "packages/components"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check src && eslint src --ext .ts,.svelte"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "keywords": [
    "svelte"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "@allmaps/annotation": "workspace:^",
    "@allmaps/render": "workspace:^",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@internationalized/date": "^3.8.1",
    "@lucide/svelte": "^0.515.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/lodash-es": "^4.17.6",
    "bits-ui": "^2.8.11",
    "clsx": "^2.1.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.0.0",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6"
  },
  "dependencies": {
    "@allmaps/basemap": "workspace:^",
    "@allmaps/bearing": "workspace:^",
    "@allmaps/maplibre": "workspace:^",
    "@allmaps/project": "workspace:^",
    "@allmaps/stdlib": "workspace:^",
    "@allmaps/transform": "workspace:^",
    "@allmaps/types": "workspace:^",
    "@allmaps/ui": "workspace:^",
    "bits-ui": "^2.8.10",
    "flatbush": "^4.4.0",
    "fuse.js": "^7.1.0",
    "lodash-es": "^4.17.21",
    "maplibre-gl": "^5.6.0",
    "phosphor-svelte": "^2.0.1",
    "pmtiles": "^3.0.6",
    "runed": "^0.31.0"
  }
}
