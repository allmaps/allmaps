{
  "name": "@allmaps/id",
  "version": "1.0.0-beta.14",
  "description": "IDs for Allmaps",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "unpkg": "./dist/browser.js",
  "exports": {
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    },
    ".": {
      "browser": {
        "types": "./dist/browser.d.ts",
        "default": "./dist/browser.js"
      },
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/allmaps.git",
    "directory": "packages/id"
  },
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "preversion": "npm types && npm lint && npm test",
    "test": "NODE_ENV=test mocha",
    "pretest": "npm run build",
    "types": "tsc --noEmit",
    "lint": "prettier --check src test && eslint src test --ext .js,.ts",
    "format": "prettier --write src test",
    "documentation": "documentation readme ./dist/index.js --section=API"
  },
  "keywords": [
    "allmaps",
    "id",
    "identifier",
    "checksum"
  ],
  "author": {
    "name": "Bert Spaan",
    "email": "hello@bertspaan.nl"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allmaps/id/issues"
  },
  "homepage": "https://allmaps.org",
  "devDependencies": {
    "@types/node": "^18.14.2",
    "chai": "^4.3.6",
    "documentation": "^14.0.0",
    "eslint": "^8.35.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "mocha": "^8.4.0",
    "typescript": "^5.0.0",
    "prettier": "^2.8.0"
  }
}
