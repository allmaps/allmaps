{
  "name": "@allmaps/id",
  "version": "1.0.0-beta.27",
  "description": "IDs for Allmaps",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "unpkg": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/allmaps.git",
    "directory": "packages/id"
  },
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "preversion": "pnpm run types && pnpm run lint && pnpm test",
    "test": "NODE_ENV=test mocha",
    "pretest": "pnpm run build",
    "types": "tsc --noEmit",
    "lint": "prettier --check src test && eslint src test --ext .js,.ts",
    "format": "prettier --write src test",
    "prebuild": "npm run documentation",
    "documentation": "documentation readme ./dist/index.js --section=API"
  },
  "keywords": [
    "allmaps",
    "id",
    "identifier",
    "checksum"
  ],
  "author": {
    "name": "Bert Spaan",
    "email": "hello@bertspaan.nl"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allmaps/id/issues"
  },
  "homepage": "https://allmaps.org",
  "dependencies": {
    "@allmaps/types": "^1.0.0-beta.13"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "chai": "^4.3.6",
    "documentation": "^14.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^8.4.0",
    "prettier": "^2.8.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=v19.0.0"
  }
}
