    "chai": "^4.3.6",
    "chai-shallow-deep-equal": "^1.4.6",
    "documentation": "^14.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^8.4.0",
    "prettier": "^2.8.0",
    "typescript": "^5.0.0"
