{
  "name": "@allmaps/leaflet",
  "version": "1.0.0-beta.1",
  "contributors": [
    {
      "name": "Bert Spaan",
      "email": "hello@bertspaan.nl",
      "url": "https://bertspaan.nl"
    },
    {
      "name": "Manuel Claeys Bouuaert",
      "email": "manuel.claeys.b@gmail.com",
      "url": "https://manuelclaeysbouuaert.be"
    }
  ],
  "description": "Allmaps Leaflet plugin",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "unpkg": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/bundled/allmaps-leaflet-1.9.umd.cjs",
      "import": "./dist/bundled/allmaps-leaflet-1.9.es.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/allmaps.git",
    "directory": "packages/leaflet"
  },
  "scripts": {
    "dev": "vite",
    "watch": "vite build --watch",
    "build": "vite build && npm run build:types",
    "preview": "vite preview",
    "build:types": "tsc --declaration --emitDeclarationOnly --esModuleInterop --outDir dist",
    "test": "NODE_ENV=test mocha",
    "types": "tsc --noEmit",
    "lint": "prettier --check src test && eslint src test --ext .js,.ts",
    "format": "prettier --write src test",
    "preversion": "npm run types && npm run lint && npm test",
    "pretest": "npm run build"
  },
  "homepage": "https://allmaps.org",
  "keywords": [
    "allmaps",
    "georeference",
    "map",
    "leaflet"
  ],
  "dependencies": {
    "@allmaps/annotation": "^1.0.0-beta.15",
    "@allmaps/render": "^1.0.0-beta.32",
    "@allmaps/stdlib": "^1.0.0-beta.13",
    "leaflet": "^1.9.4"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/leaflet": "^1.9.3",
    "eslint": "^8.35.0",
    "mocha": "^8.4.0",
    "prettier": "^2.8.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0"
  }
}
