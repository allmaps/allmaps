{
  "name": "@allmaps/maplibre",
  "version": "1.0.0-beta.1",
  "contributors": [
    {
      "name": "Bert Spaan",
      "email": "hello@bertspaan.nl",
      "url": "https://bertspaan.nl"
    },
    {
      "name": "Manuel Claeys Bouuaert",
      "email": "manuel.claeys.b@gmail.com",
      "url": "https://manuelclaeysbouuaert.be"
    }
  ],
  "description": "MapLibre classes for Allmaps",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "unpkg": "./dist/allmaps-maplibre.umd.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/bundled/allmaps-maplibre.umd.cjs",
      "import": "./dist/bundled/allmaps-maplibre.es.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/allmaps.git",
    "directory": "packages/maplibre"
  },
  "homepage": "https://allmaps.org",
  "keywords": [
    "iiif",
    "georeference",
    "map",
    "maplibre",
    "allmaps"
  ],
  "scripts": {
    "dev": "vite",
    "watch": "vite build --watch",
    "build": "vite build && npm run documentation",
    "preview": "vite preview",
    "types": "tsc --noEmit",
    "build:types": "tsc --declaration --esModuleInterop",
    "lint": "prettier --check src test && eslint src test --ext .js,.ts",
    "format": "prettier --write src test",
    "preversion": "npm run types && npm run lint && npm test",
    "test": "NODE_ENV=test mocha",
    "documentation": "documentation readme dist/index.js --markdown-toc-max-depth=3 --section=API",
    "pretest": "npm run build"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@allmaps/render": "^1.0.0-beta.35",
    "@allmaps/stdlib": "^1.0.0-beta.16",
    "maplibre-gl": "^3.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "documentation": "^14.0.0",
    "eslint": "^8.35.0",
    "mocha": "^8.4.0",
    "prettier": "^2.8.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0"
  }
}
