  "description": "MapLibre classes for Allmaps",
  "type": "module",
  "main": "./dist/bundled/allmaps-maplibre-4.0.umd.js",
  "module": "./dist/bundled/allmaps-maplibre-4.0.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/bundled/allmaps-maplibre-4.0.umd.js",
