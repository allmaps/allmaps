    "@typescript-eslint/parser": "^7.0.0",
    "documentation": "^14.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.8.2",
    "prettier": "^2.8.0",
    "typescript": "^5.5.4",
    "vite": "^5.0.3"
