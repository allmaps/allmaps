{
  "name": "@allmaps/openlayers",
  "version": "1.0.0-beta.38",
  "author": {
    "name": "Bert Spaan",
    "email": "hello@bertspaan.nl",
    "url": "https://bertspaan.nl"
  },
  "description": "OpenLayers classes for Allmaps",
  "type": "module",
  "types": "./dist/8/index.d.ts",
  "module": "./dist/8/index.js",
  "main": "./dist/8/index.js",
  "unpkg": "./dist/bundled/allmaps-openlayers-8.umd.cjs",
  "exports": {
    "./6": {
      "types": "./dist/6/index.d.ts",
      "default": "./dist/6/index.js",
      "require": "./dist/bundled/allmaps-openlayers-6.umd.cjs",
      "import": "./dist/bundled/allmaps-openlayers-6.es.js"
    },
    "./7": {
      "types": "./dist/7/index.d.ts",
      "default": "./dist/7/index.js",
      "require": "./dist/bundled/allmaps-openlayers-7.umd.cjs",
      "import": "./dist/bundled/allmaps-openlayers-7.es.js"
    },
    "./8": {
      "types": "./dist/8/index.d.ts",
      "default": "./dist/8/index.js",
      "require": "./dist/bundled/allmaps-openlayers-8.umd.cjs",
      "import": "./dist/bundled/allmaps-openlayers-8.es.js"
    },
    ".": {
      "types": "./dist/8/index.d.ts",
      "require": "./dist/bundled/allmaps-openlayers-8.umd.cjs",
      "import": "./dist/bundled/allmaps-openlayers-8.es.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/allmaps.git",
    "directory": "packages/openlayers"
  },
  "homepage": "https://allmaps.org",
  "keywords": [
    "iiif",
    "georeference",
    "map",
    "openlayers",
    "allmaps"
  ],
  "scripts": {
    "dev": "vite",
    "watch": "vite build --watch",
    "build": "npm run build6 && npm run build7 && npm run build8",
    "build6": "OL_VERSION=6 vite build",
    "build7": "OL_VERSION=7 vite build",
    "build8": "OL_VERSION=8 vite build",
    "preview": "vite preview",
    "types": "tsc --noEmit",
    "build:types": "tsc --declaration --esModuleInterop",
    "lint": "prettier --check src test && eslint src test --ext .js,.ts",
    "format": "prettier --write src test",
    "preversion": "npm run types && npm run lint && npm test",
    "documentation": "documentation readme dist/8/index.js --markdown-toc-max-depth=3 --section=API",
    "test": "NODE_ENV=test mocha",
    "pretest": "npm run build"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@allmaps/render": "^1.0.0-beta.35",
    "lodash-es": "^4.17.21",
    "ol6": "npm:ol@^6.15.1",
    "ol7": "npm:ol@^7.5.2",
    "ol8": "npm:ol@^8.1.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "documentation": "^14.0.0",
    "eslint": "^8.35.0",
    "mocha": "^8.4.0",
    "prettier": "^2.8.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0"
  }
}
