  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "chai": "^4.3.6",
    "chai-shallow-deep-equal": "^1.4.6",
    "eslint": "^8.35.0",
    "mocha": "^8.4.0",
    "prettier": "^2.8.0",
