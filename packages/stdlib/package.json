    "preversion": "npm run types && npm run lint && npm test",
    "test": "NODE_ENV=test mocha",
    "pretest": "npm run build",
    "lint": "prettier --check src test && eslint src test --ext .js,.ts",
    "format": "prettier --write src test",
    "types": "tsc --noEmit"
