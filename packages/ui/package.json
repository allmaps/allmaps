{
  "name": "@allmaps/ui",
  "version": "1.0.0-beta.31",
  "author": {
    "name": "Bert Spaan",
    "email": "hello@bertspaan.nl",
    "url": "https://bertspaan.nl"
  },
  "description": "UI components and functions for Allmaps. And style guide!",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./kit": {
      "types": "./dist/components/kit/index.d.ts",
      "svelte": "./dist/components/kit/index.js"
    },
    "./css/*": "./dist/css/*"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/allmaps/allmaps.git",
    "directory": "packages/ui"
  },
  "scripts": {
    "dev": "vite dev",
    "watch": "svelte-package --watch",
    "build": "svelte-kit sync && svelte-package && publint",
    "html-build": "vite build",
    "lerna-html-build": "lerna run html-build --scope @allmaps/ui --include-dependencies",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check src && eslint src --ext .ts,.svelte",
    "format": "prettier --write src",
    "types": "tsc --noEmit",
    "preversion": "pnpm run types && pnpm run lint"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.3.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.9",
    "@types/eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.18",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.1.9",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^5.0.3"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^4.2.7"
  },
  "dependencies": {
    "@allmaps/iiif-parser": "^1.0.0-beta.39",
    "@allmaps/tailwind": "^1.0.0-beta.13",
    "@allmaps/types": "^1.0.0-beta.14",
    "flowbite": "^1.6.4"
  }
}
