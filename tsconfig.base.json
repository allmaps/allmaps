{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "target": "es2022",
    "module": "es2022",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "moduleResolution": "node",
    "ignoreDeprecations": "5.0",
    "paths": {
      "@allmaps/types": ["./packages/types/src"],
      "@allmaps/id": ["./packages/id/src"],
      "@allmaps/transform": ["./packages/transform/src"],
      "@allmaps/triangulate": ["./packages/triangulate/src"],
      "@allmaps/render": ["./packages/render/src"],
      "@allmaps/stdlib": ["./packages/stdlib/src"],
      "@allmaps/annotation": ["./packages/annotation/src"],
      "@allmaps/iiif-parser": ["./packages/iiif-parser/src"],
      "@allmaps/openlayers": ["./packages/openlayers/src"],
      "@allmaps/ui": ["./packages/ui/src"],
      "@allmaps/tailwind": ["./packages/tailwind/src"],
      "@allmaps/bearing": ["./packages/bearing/src"],

      "@allmaps/types/*": ["./packages/types/src/*"],
      "@allmaps/transform/*": ["./packages/transform/src/*"],
      "@allmaps/triangulate/*": ["./packages/triangulate/src/*"],
      "@allmaps/render/*": ["./packages/render/src/*"],
      "@allmaps/stdlib/*": ["./packages/stdlib/src/*"],
      "@allmaps/annotation/*": ["./packages/annotation/src/*"],
      "@allmaps/iiif-parser/*": ["./packages/iiif-parser/src/*"],
      "@allmaps/openlayers/*": ["./packages/openlayers/src/*"],
      "@allmaps/ui/*": ["./packages/ui/src/*"],
      "@allmaps/tailwind/*": ["./packages/tailwind/src/*"],
      "@allmaps/bearing/*": ["./packages/bearing/src/*"]
    }
  }
}
