{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "vite.config.ts",
        "svelte.config.js"
      ],
      "outputs": ["dist/**", "build/**"],
      "dependsOn": ["^build"]
    },
    "types": {
      "inputs": ["src/**", "package.json", "tsconfig.json"],
      "outputs": ["dist/**", "build/**"],
      "dependsOn": ["build", "^types"]
    },
    "lint": {
      "inputs": [
        "src/**",
        "package.json",
        "eslint.config.js",
        ".prettierrc",
        "tsconfig.json",
        ".prettierignore"
      ],
      "outputs": [],
      "dependsOn": ["build", "^lint"]
    },
    "test": {
      "inputs": ["src/**", "test/**", "package.json"],
      "outputs": [],
      "dependsOn": ["build"]
    },
    "check": {
      "inputs": ["src/**", "package.json", "tsconfig.json"],
      "outputs": [],
      "dependsOn": ["^check"]
    },
    "documentation": {
      "inputs": ["src/**", "package.json", "README.md"],
      "outputs": ["README.md"],
      "dependsOn": ["^documentation"]
    },
    "precommit": {
      "dependsOn": ["build", "test", "types", "lint", "documentation"]
    },
    "watch": {
      "inputs": ["src/**/*.*"],
      "outputs": ["dist/**", "build/**"],
      "dependsOn": ["^test", "^build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
