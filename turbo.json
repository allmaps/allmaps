{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "types": {
      "dependsOn": ["^types"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "documentation": {
      "dependsOn": ["^documentation"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
